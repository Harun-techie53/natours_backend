{
  "compilerOptions": {
    "target": "ESNext", // Target ECMAScript version
    "module": "ESNext", // Specify module code generation
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Emit additional import/exports to support CommonJS interop
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of TypeScript source files
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*.ts"], // Specify the files to include in compilation
  "exclude": ["node_modules"], // Specify the files to exclude from compilation
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "esm": true
  }
}
